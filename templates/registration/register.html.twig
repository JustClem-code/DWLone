{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
  <div class="max-w-md mx-auto mt-10 p-8 rounded shadow-lg bg-white dark:bg-gray-800">
    <h1 class="text-2xl font-bold mb-6 text-center">Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {
            attr: {
                class: 'block w-full px-4 py-2 rounded border-gray-300 focus:ring-blue-500 focus:border-blue-500 bg-gray-50 dark:bg-gray-700 dark:text-gray-200 mb-4'
            },
            label_attr: {
                class: 'block mb-2 font-semibold text-gray-700 dark:text-gray-300'
            }
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            attr: {
                class: 'block w-full px-4 py-2 rounded border-gray-300 focus:ring-blue-500 focus:border-blue-500 bg-gray-50 dark:bg-gray-700 dark:text-gray-200 mb-4'
            },
            label_attr: {
                class: 'block mb-2 font-semibold text-gray-700 dark:text-gray-300'
            }
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            attr: {
                class: 'mr-2 accent-blue-600'
            },
            label_attr: {
                class: 'inline font-medium text-gray-700 dark:text-gray-300'
            }
        }) }}

        <button type="submit"
          class="w-full py-2 mt-6 bg-blue-600 text-white rounded font-semibold hover:bg-blue-700 transition-colors">
          Register
        </button>
    {{ form_end(registrationForm) }}
  </div>
{% endblock %}


